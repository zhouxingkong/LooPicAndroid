<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <Button
            android:id="@+id/rm_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="@color/black"
            android:text=""
            android:textSize="23sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/loo_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:background="@color/black"
                android:text=""
                android:textSize="23sp" />

            <LinearLayout
                android:id="@+id/story_index_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/storyContainer1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@+id/story_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#40ff0000"/>

                    <ListView
                        android:id="@+id/index_list1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.0"
                        android:background="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/storyContainer2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@+id/story_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#4000ff00"/>

                    <ListView
                        android:id="@+id/index_list2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.0"
                        android:background="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/storyContainer3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@+id/story_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#400000ff"/>

                    <ListView
                        android:id="@+id/index_list3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.0"
                        android:background="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/storyContainer4"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@+id/story_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#40ffff00"/>

                    <ListView
                        android:id="@+id/index_list4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.0"
                        android:background="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/storyContainer5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@+id/story_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#4000ffff"/>

                    <ListView
                        android:id="@+id/index_list5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.0"
                        android:background="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/storyContainer6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0">
                    <TextView
                        android:id="@+id/story_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="#40ff00ff"/>

                    <ListView
                        android:id="@+id/index_list6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.0"
                        android:background="@color/black"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/loo_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pre_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/black"
                android:text="◀"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/change_pic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/black"
                android:text="▼"
                android:textColor="@color/white" />
        </LinearLayout>

        <ListView
            android:id="@+id/soundList"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/black"/>

    </LinearLayout>


    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/photo_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@color/black"
        fresco:actualImageScaleType="fitCenter"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:retryImageScaleType="fitCenter" />


</LinearLayout>